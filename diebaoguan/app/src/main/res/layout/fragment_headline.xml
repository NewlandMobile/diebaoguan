<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lin.diebaoguan.dbg.fragment.HeadlineFragment">

    <android.support.v4.view.ViewPager
        android:id="@+id/headline_viewpager"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/gray"></android.support.v4.view.ViewPager>

    <ListView
        android:id="@+id/headline_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/headline_viewpager" />
</RelativeLayout>
