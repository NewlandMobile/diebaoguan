<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">


    <TextView
        android:text="字体大小"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setting_dialog_textSize_title"
        android:background="@drawable/push_title"/>

    <RadioGroup

        android:id="@+id/radio_group_textSize_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RadioButton
            android:id="@+id/radioButton_big"
            style="@style/setting_textSize_radio_btn"
            android:text="大"/>

        <RadioButton
            android:id="@+id/radioButton_middle"
            style="@style/setting_textSize_radio_btn"
            android:checked="true"
            android:text="中"/>

        <RadioButton
            android:id="@+id/radioButton_small"
            style="@style/setting_textSize_radio_btn"
            android:text="小"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/push_title"
        android:padding="5dp">
        <Button
            android:id="@+id/dialog_confirm_setting"
            android:text="确定"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_btn"/>

        <Button
            android:id="@+id/dialog_cancel_setting"
            android:text="取消"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_btn"/>

    </LinearLayout>

</LinearLayout>