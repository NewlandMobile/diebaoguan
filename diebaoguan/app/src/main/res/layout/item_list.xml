<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/itme_abstract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_iamge"
        android:layout_alignStart="@+id/item_title"
        android:layout_marginRight="10dp"
        android:maxEms="15"
        android:maxLength="25"
        android:text="内容简介内容简介内容简介内容简介内容简介内容简介内容简介内容简介"
        android:textColor="@color/deepgray" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_iamge"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/item_iamge"
        android:maxLength="15"
        android:text="内容标题内容标题内容标题内容标题"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/itme_abstract"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:text="2016-12-28"
        android:textColor="@color/deepgray" />

    <ImageView
        android:id="@+id/item_iamge"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        android:background="@color/lucency" />
</RelativeLayout>