<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/headline_viewpager"
        android:layout_width="match_parent"
        android:layout_height="180dp"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/lucencygray_background"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:maxLength="15"
            android:text="我是标题我是标题我是标题"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp">


            <ImageView
                android:id="@+id/headline_point6"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/gray_point" />

            <ImageView
                android:id="@+id/headline_point5"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toStartOf="@+id/headline_point6"
                android:background="@drawable/gray_point" />

            <ImageView
                android:id="@+id/headline_point4"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toStartOf="@+id/headline_point5"
                android:background="@drawable/gray_point" />

            <ImageView
                android:id="@+id/headline_point3"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toStartOf="@+id/headline_point4"
                android:background="@drawable/gray_point" />

            <ImageView
                android:id="@+id/headline_point2"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toStartOf="@+id/headline_point3"
                android:background="@drawable/gray_point" />

            <ImageView
                android:id="@+id/headline_point1"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/headline_point2"
                android:background="@drawable/red_point" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>