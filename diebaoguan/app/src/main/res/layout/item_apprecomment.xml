<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/apprecom_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/apprecom_image"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/apprecom_image"
        android:text="apprecom_name" />

    <TextView
        android:id="@+id/apprecom_goodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/apprecom_name"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/apprecom_image"
        android:text="apprecom_goodname" />

    <ImageView
        android:id="@+id/apprecom_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:background="@drawable/default_article_list" />

    <Button
        android:id="@+id/apprecom_download"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/lookmore_selector"
        android:text="@string/download"
        android:textColor="@color/white" />
</RelativeLayout>