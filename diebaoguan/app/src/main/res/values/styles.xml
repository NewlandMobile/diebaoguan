<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_content.layout_weight" parent="wrap_content">
        <item name="android:layout_weight">1</item>
    </style>

    <!--以下是 注册页 的 样式 定义-->
    <style name="registerTextView" parent="wrap_content">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="registerEditText" parent="wrap_content">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="registerLinearLayoutHorizontal" parent="wrap_content">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="registerDividerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>

</resources>
