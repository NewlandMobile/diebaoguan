<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_content.layout_weight">
        <item name="android:layout_weight">1</item>
    </style>

    <!--以下是 注册页 的 样式 定义-->
    <style name="registerTextView" parent="wrap_content">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="registerEditText" parent="wrap_content">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="registerLinearLayoutHorizontal" parent="wrap_content">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="registerDividerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="wrap_content.layout_weight.registerBottomButton" >
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/register_gray_button_background</item>
        <item name="android:layout_margin">10dp</item>
    </style>


    <!--以下为设置页 的样式-->
    <style name="setting_textView_divider">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/push_title</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="setting_RL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="wrap_content.parent_right">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="wrap_content.parent_right.setting_imageView_right_arrow">
        <item name="android:src">@drawable/preference_right</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="wrap_content.setting_tv_item">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="wrap_content.setting_tv_item_instruction">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/deepgray</item>
    </style>

    <style name="wrap_content.parent_right.setting_checkbox">
        <!--<item name="android:checked">true</item>-->
    </style>

    <style name="setting_textSize_radio_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@android:drawable/btn_radio</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--无标题栏  背景透明的 对话框-->
    <style name="add_dialog" parent="@android:style/Theme.Dialog">
        <!--<item name="android:windowFrame">@null</item>&lt;!&ndash; 边框 &ndash;&gt;-->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <!--<item name="android:windowIsTranslucent">false</item>&lt;!&ndash; 半透明 &ndash;&gt;-->
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item><!-- 自己想要的背景 -->
        <!--<item name="android:backgroundDimEnabled">true</item>&lt;!&ndash; 灰背景 &ndash;&gt;
        <item name="android:backgroundDimAmount">0.5</item> &lt;!&ndash;背景灰度值&ndash;&gt;-->
    </style>

</resources>
